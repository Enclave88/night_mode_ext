{
  "manifest_version": 2,

  "name": "Switch view mode",
  "description": "Switched view mode between light and dark theme",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Switch it right now!"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}